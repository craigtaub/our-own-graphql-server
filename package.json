{
  "name": "our-own-graphql-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index",
  "typings": "dist/index",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc generate:types",
    "start:local": "node .",
    "build:start": "npm-run-all build start:local",
    "watch:types": "watch  -p \"**/*.gql\" -p \"**/edge.ts\" -p \"**/edge.js\" -c \"yarn generate:types\"",
    "generate:types": "graphql-codegen --config codegen.yml",
    "start:dev:lint": "nodemon --watch src -e ts,ejs --exec npm run build:start",
    "start:dev": "concurrently \"babel-watch --watch src --extensions '.js,.json,.ts,.gql' src/index.ts\" \"yarn watch:types\"",
    "start:prod": "node ./dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/craigtaub/our-own-graphql-server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/craigtaub/our-own-graphql-server/issues"
  },
  "homepage": "https://github.com/craigtaub/our-own-graphql-server#readme",
  "dependencies": {
    "express": "^4.17.1",
    "graphql": "^15.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@graphql-codegen/cli": "1.17.8",
    "@graphql-codegen/introspection": "1.17.8",
    "@graphql-codegen/typescript": "1.17.8",
    "@types/express": "^4.17.7",
    "@types/node": "^14.6.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-watch": "^7.0.0",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2",
    "watch": "^1.0.2"
  }
}
